<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_geotown</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Geotown</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Geotown</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Geotown</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Geotown</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Geotown</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_geotown</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_geotown</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Geotown</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Geotown.Widget</item>

    </style>

    <style name="ActionBar.Solid.Geotown" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_geotown</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_geotown</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_geotown</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Geotown</item>
    </style>

    <style name="ActionBar.Transparent.Geotown" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_geotown</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Geotown</item>
    </style>

    <style name="PopupMenu.Geotown" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_geotown</item>
    </style>

    <style name="DropDownListView.Geotown" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_geotown</item>
    </style>

    <style name="ActionBarTabStyle.Geotown" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_geotown</item>
    </style>

    <style name="DropDownNav.Geotown" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_geotown</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_geotown</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_geotown</item>
    </style>

    <style name="ProgressBar.Geotown" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_geotown</item>
    </style>

    <style name="ActionButton.CloseMode.Geotown" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_geotown</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Geotown.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Geotown</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Geotown</item>
    </style>


</resources>
